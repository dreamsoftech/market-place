<!--=== Content Part ===-->
<div class="container">
	<br><br>
	<div class="span10 center">
	<div class="row-fluid">
  	<div class="span8">
			<!-- Primary profile -->
			<div class="row-fluid margin-bottom-40">
				<div class="span3">
					<%= image_tag @profile.photo.url(:medium) %>
				</div>
				<div class="span9">
					<div class="row-fluid">
						<div class="span7">
							<h2><%= @profile.user.fullname %></h2>
							<h5><%= @profile.title %></h5>
						</div>
						<div class="span5 rating-star">
							<ul class="unstyled inline">
								<li><i class="icon-star"></i></li>
								<li><i class="icon-star"></i></li>
								<li><i class="icon-star"></i></li>
								<li><i class="icon-star"></i></li>
								<li><i class="icon-star"></i></li>
								<li><h4>&nbsp;5.00</h4></li>
							</ul>
						</div>
					</div>
					<div class="row-fluid">
						<ul class="unstyled inline blog-tags strong">
							<% @profile.skills.each do |s| %>
								<li><a href="#"><%= s.name %></a></li>
							<% end %>
						</ul>
					</div>
				</div>
			</div><!--/row-->
			<!-- //Profile Overview -->

			<!-- Overview  -->
			<div class="row-fluid">
					<div class="alert alert-info">
						<h4>Overview</h4>
					</div>
					<div class="span12">
						<%= @profile.overview.gsub("\n", "<br>").html_safe unless @profile.overview.nil? %>
					</div>
			</div><!--/row-fluid-->
			<br>
			<div class="row-fluid">
				<div class="alert alert-info">
					<h4>Prep History and Feedback</h4>
				</div>
				<div class="span11">
					<div class="row-fluid">
						<div class="span6">
							<h4>Accounting Prep</h4>
							<p>Andew is top notch prepper. Thanks Andrew</p>
						</div>
						<div class="span4 pull-right text-right">
							<p>July 2013</p>
							<p>40 minutes @ <strong>$5.00</strong>/min</p>
							<p>Earned </p>
						</div>
					</div>
				</div>
			</div><!--/row-fluid-->
			<br>
			<!-- Professional Experience -->
			<div class="row-fluid">
				<div class="alert alert-info">
					<h4>Professional Experience</h4>
				</div>
				<div class="span12">
					<% @profile.pro_experiences.each_with_index do |p, i| %>
						<h5>
							<strong><%= p.title %></strong> | <%= p.company_name %>
						</h5>
						<p><%= p.from + " - " + p.to %></p>
						<p><%= p.description %></p>
						<%= "<hr>".html_safe if i < @profile.pro_experiences.size - 1 %>
					<% end %>
				</div>
			</div><!--/row-fluid-->
			<br>
			<!-- Education -->
			<div class="row-fluid">
				<div class="alert alert-info">
					<h4>Education</strong><h4>
				</div>
				<div class="span12">
					<% @profile.educations.each_with_index do |e, i| %>
						<h5>
							<strong><%= Education::DEGREES[e.degree] + ", " + e.area_of_study %></strong> | <%= e.school %>
						</h5>
						<p><%= e.from + " - " + e.to %></p>
						<p><%= e.comments %></p>
						<%= "<hr>".html_safe if i < @profile.educations.size - 1 %>
					<% end %>
				</div>
			</div><!--/row-fluid-->
			<br>
			<!-- Other Experience -->
			<div class="row-fluid">
				<div class="alert alert-info">
					<h4>Other Experience</h4>
				</div>
				<div class="span12">
					<% @profile.other_experiences.each_with_index do |p, i| %>
					<h5><strong><%= p.name %></strong></h5>
					<p><%= p.description %></p>
					<%= "<hr>".html_safe if i < @profile.other_experiences.size - 1 %>
					<% end %>
				</div>
			</div><!--/row-fluid-->
		</div><!--/span8-->

  	<div class="span4" style="background-color: #f3f3f3; padding: 20px;">
  		<% if current_user.roles.first.name == "preppee" && @invitable_preps.present? %>
  		<p>
  			<strong>
					<%= link_to 'Invite', "#add-contract", :class => 'btn btn-large btn-success text-center', :style => 'width: 80%', data: {toggle: "modal"} %>
					<%= render :partial => "contracts/invite" %>
				</strong>
			</p>
			<% end %>
			<br>
    	<!-- Profile Overview -->
      <table class="table table-condensed">
				<thead>
					<tr>
							<th width="50%"></th>
							<th>Preps</th>
							<th>Stars</th>
							<th>Hours</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>All time</td>
						<td></td>
						<td></td>
						<td></td>
					</tr>
					<tr>
						<td>Last 6 Months</td>
						<td></td>
						<td></td>
						<td></td>
					</tr>
				</tbody>
			</table>
			<br>
			<table class="table table-condensed">
				<thead>
					<tr style="font-weight: normal;">
						<td>Location</td>
						<td style="text-align: right;"><%= @profile.address %></td>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>English Skills</td>
						<td style="text-align: right;">5 of 5</td>
					</tr>
					<tr>
						<td>Last Online</td>
						<td style="text-align: right;">August 14, 2013</td>
					</tr>
					<tr>
						<td>Member Since</td>
						<td style="text-align: right;">July 11, 2012</td>
					</tr>
				</tbody>
			</table>
    </div><!--/span4-->
  </div><!--/row-fluid-->    
	</div>

</div><!--/container-->le>