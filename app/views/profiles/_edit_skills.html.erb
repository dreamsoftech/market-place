<div id="skill-<%= skill.id %>" class="collapse">
  <%= simple_form_for skill, remote: true, :html => {:method => :put, :class => 'form-horizontal' } do |p| %>
    <div class="alert alert-danger hide">
      <span></span>
    </div>
    <%= hidden_field_tag :profile_id, @profile.id %>
    <div class="control-group">
      <%= label_tag :name, "Skills / Specialization", class: "control-label" %>
      <div class="controls">
        <%= p.input_field :name, collection: SkillTag.all, prompt: "Select Skills" %>
        <%= p.submit "Add", :class => "btn btn-success" %>
        <a class="btn" data-dismiss="collapse" onclick="$('#add-skill').collapse('hide');">Cancel</a>
      </div>
    </div>

    <div class="controls form-inline">
      
    </div>
  <% end %>
</div>