<div id="add-other-exp" class="collapse">
  <%= simple_form_for @other_experience, remote: true, :html => {:method => :post, :class => 'form-horizontal' } do |p| %>
    <div class="alert alert-danger hide">
      <span></span>
    </div>
    <%= hidden_field_tag :profile_id, @profile.id %>
    <%= p.input :name, autofocus: true %>
    <div class="control-group">
      <%= p.label :descrption, 'Description', :class => 'control-label' %>
      <div class="controls">
        <%= p.text_area :description, :class => 'overview' %>
      </div>
    </div>
    <div class="controls form-inline">
      <%= p.submit "Add", :class => "btn btn-success" %>
      <a class="btn" data-dismiss="collapse" onclick="$('#add-education').collapse('hide');">Cancel</a>
    </div>
  <% end %>
</div>