<div id="add-skill" style="display:none;">
  <%= simple_form_for @skill, remote: true, :html => {:method => :post, :class => 'form-horizontal' } do |p| %>
    <div class="alert alert-danger hide">
      <span></span>
    </div>
    <%= hidden_field_tag :profile_id, @profile.id %>
    <div class="control-group">
      <%= label_tag :name, "Skills / Specialization", class: "control-label" %>
      <div class="controls">
        <%= p.input_field :name, collection: SkillTag.all, :class => 'chzn-select-medium', prompt: "What are your areas of expertise?" %>
        <button type="submit" class="btn btn-success">Add</button>
        <a class="btn" onclick="$('#add-skill').fadeOut('fast');">Cancel</a>
      </div>
    </div>

    <div class="controls form-inline">
      
    </div>
  <% end %>
</div>