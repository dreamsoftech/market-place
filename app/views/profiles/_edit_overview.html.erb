<div id="profile-overview" class="collapse" style="display: none;">
  <%= simple_form_for @profile, :url => profile_path(@profile), :html => {:method => :put, :class => 'form-horizontal' } do |p| %>
    <div class="alert alert-danger hide">
      <span></span>
    </div>
    
    <%= p.hidden_field :token %>
    <div class="control-group">
      <%= p.label :email, 'User Email', :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :email, current_user.email %>
      </div>
    </div>
    <%= p.input :title %>

    <%= p.input :year_of_experience, collection: 1..20, prompt: "Please Select..." %>
    <%#= p.input :english_skill, collection: EnglishSkill.all, prompt: "Please Select...", requred: true %>
    <div class="control-group">
      <%= p.label :overview, 'Overview', :class => 'control-label' %>
      <div class="controls">
        <%= p.text_area :overview, :class => 'overview' %>
      </div>
    </div>
    <div class="controls form-inline">
      <%= p.submit "Save", :class => "btn btn-success" %>
      <a class="btn" data-dismiss="collapse" onclick="$('#profile-overview').collapse('hide');">Cancel</a>
    </div>
  <% end %>
</div>