<% applicant = @application.user %>
<!--=== Content Part ===-->
<div class="container">
	<br><br>
	<div class="span10 center">
		<div class="row-fluid">
	  	<div class="span8">
					<!-- Recent Works -->
					<div class="row-fluid margin-bottom-40">
							<div class="span3">
								<%= image_tag applicant.profile.photo.url(:medium) %>
							</div>
							<div class="span9">
								<div class="row-fluid">
									<div class="span7">
										<h2><%= applicant.fullname %></h2>
										<h5><%= applicant.profile.title %></h5>
									</div>
									<div class="span5 rating-star">
										<ul class="unstyled inline">
											<li><i class="icon-star"></i></li>
											<li><i class="icon-star"></i></li>
											<li><i class="icon-star"></i></li>
											<li><i class="icon-star"></i></li>
											<li><i class="icon-star"></i></li>
											<li><h4>&nbsp;5.00</h4></li>
										</ul>
									</div>
								</div>
								<div class="row-fluid">
									<ul class="unstyled inline blog-tags strong">
										<% applicant.profile.skills.each do |s| %>
											<li><a href="#"><%= s.name %></a></li>
										<% end %>
									</ul>
								</div>
							</div>
					</div><!--/row-->
					<!-- //End Recent Works -->

					<!-- Example Blocks  -->
					<div class="row-fluid">
							<div class="alert alert-info">
								<h4>Cover Letter</h4>
							</div>
							<div class="span12">
								<%= @application.cover_letter.gsub("\n", "<br>").html_safe unless @application.cover_letter.nil? %>
							</div>
					</div><!--/row-fluid-->
			</div><!--/span8-->

	  	<div class="span4" style="background-color: #f3f3f3; padding: 20px; width: 270px;">
	    	<!-- Our Services -->
	      <p><strong>Contractor's proposed terms:</strong></p>
	      <table class="table">
						<tr>
							<td>Bid/Budget</td>
							<td style="text-align: right;">
							</td>
						</tr>
				</table>
				<p><strong>
					<%= link_to 'Hire', "#add-contract", :class => 'btn btn-large btn-success text-center', :style => 'width: 80%', data: {toggle: "modal"} %>
					<%= render :partial => "contracts/create" %>
				</strong></p>
				<p><%= link_to 'Decline', prep_prep_application_decline_path(params[:prep_id], params[:id]) %></p>
				<table class="table table-condensed">
					<thead>
						<tr style="font-weight: normal;">
							<td>Location</td>
							<td style="text-align: right;">
								<%= applicant.profile.address %> / hr
							</td>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>Last Online</td>
							<td style="text-align: right;">
								<%= applicant.last_sign_in_at.strftime("%e %B, %Y") %>
							</td>
						</tr>
						<tr>
							<td>Member Since</td>
							<td style="text-align: right;">
								<%= applicant.created_at.strftime("%e %B, %Y") %>
							</td>
						</tr>
					</tbody>
				</table>
	    </div><!--/span4-->
	  </div><!--/row-fluid-->    
	</div>
</div><!--/container-->		
<!--=== End Content Part ===-->