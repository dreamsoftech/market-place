<!--=== Content Part ===-->
<div class="body">
	<div class="breadcrumbs margin-bottom-50">
  	<div class="container">
      <h1 class="color-green pull-left">Edit Account</h1>
      <ul class="pull-right breadcrumb">
          <li><a href="#">Home</a> <span class="divider">/</span></li>
          <li class="active"><%= params[:plan].titleize if params[:plan] %> Edit Account</li>
      </ul>
    </div><!--/container-->
  </div><!--/breadcrumbs-->

	<div class="container">
		<div class="span11 center">
			<div class="row-fluid margin-bottom-10">
				<!--Left Side bar-->
				<%= render partial: "shared/profile_sidebar" %>

				<div class="span9">
					<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
		        <%= hidden_field_tag 'plan', params[:plan] %>
					  <%= f.error_notification %>
					  <%= display_base_errors resource %>
		        <div class="controls">
		  			<%= f.input :first_name, required:true, :autofocus => true %>
		  			<%= f.input :last_name, required:true %>
		  			<%= f.input :email, :required => true %>
		        </div>
		        <div class="controls">
						  <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
						  <%= f.input :password_confirmation, :required => false %>
						  <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
		      	</div>
		        <div class="controls">
		          <%= f.button :submit, 'Update', :class => 'btn-u' %>
		          <%= link_to "Back", :back %>
		        </div>
		        <br>
		        <div class="controls">
							<p><%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
						</div>
		    	<% end %>
	    	</div>
	    </div><!--/row-fluid-->
	  </div><!--/layout-->
	</div><!--/container-->		
</div><!--/body-->
<!--=== End Content Part ===-->