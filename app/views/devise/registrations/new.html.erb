<!--=== Content Part ===-->
<div class="body">
	<div class="breadcrumbs margin-bottom-50">
    	<div class="container">
          <h1 class="color-green pull-left">Register</h1>
          <ul class="pull-right breadcrumb">
              <li><a href="#">Home</a> <span class="divider">/</span></li>
              <li class="active"><%= params[:plan].titleize if params[:plan] %> Registration</li>
          </ul>
      </div><!--/container-->
    </div><!--/breadcrumbs-->

	<div class="container">		
		<div class="row-fluid margin-bottom-10">
    	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical reg-page' }) do |f| %>
        <%= hidden_field_tag 'plan', params[:plan] %>
    		<h3>Register a new account</h3>
			  <%= f.error_notification %>
			  <%= display_base_errors resource %>
        <div class="controls">
          <%= f.input :first_name, :autofocus => true %>
          <%= f.input :last_name %>
				  <%= f.input :email, :required => true %>
        </div>
        <div class="controls">
          <div class="span6">
            <%= f.input :password, :required => true %>
            <%= f.input :password_confirmation, :required => true %>
          </div>
      	</div>
        <div class="controls form-inline">
          <label class="checkbox"><input type="checkbox" />&nbsp; I read <a href="">Terms and 	Conditions</a></label>
          <%= f.button :submit, 'Register', :class => 'btn-u pull-right' %>
        </div>
        <hr />
        <div class="controls">
					<%= render "devise/shared/links" %>
				</div>
    	<% end %>
    </div><!--/row-fluid-->
	</div><!--/container-->		
</div><!--/body-->
<!--=== End Content Part ===-->