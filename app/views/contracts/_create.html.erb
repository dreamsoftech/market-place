<div id="add-contract" class="modal" style="display: none;">
  <%= simple_form_for :contract, :url => contracts_path, :html => {:method => :post, :class => 'form-horizontal' } do |p| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3>Hire Prepper</h3>
    </div>
    <div class="modal-body">
      <%= hidden_field_tag :prep_id, params[:prep_id] %>
      <%= hidden_field_tag :application_id, params[:id] %>
      
      <div class="control-group">
        <%= p.label :due_start_time, 'Due Start Time', :class => 'control-label' %>
        <div class="controls">
          <%= p.input_field :due_start_date, required: true, :class => 'date-picker', placeholder: "Input Start Date" %>
        </div>
        <div class="controls">
          <%= p.input_field :due_start_time, required: true, placeholder: "HH:mm" %>
        </div>
      </div>
      <div class="control-group">
        <%= p.label :comments, 'Description', :class => 'control-label' %>
        <div class="controls">
          <%= p.text_area :comments, :style =>"width: 300px; height: 150px;" %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= p.submit "Save", :class => "btn btn-success" %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
  <% end %>
</div>