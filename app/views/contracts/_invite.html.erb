<div id="add-contract" class="modal" style="display: none;">
  <%= simple_form_for :contract, :url => '/contracts/invite', :html => {:method => :post, :class => 'form-horizontal' } do |p| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3>Invite Prepper</h3>
    </div>
    <div class="modal-body">
      <%= hidden_field_tag :prepper_id, @profile.user.id %>
      
      <div class="control-group">
        <%= p.label :due_start_time, 'Due Start Time', :class => 'control-label' %>
        <div class="controls">
          <%= p.input_field :due_start_date, required: true, :class => 'date-picker', placeholder: "Input Start Date", style: "width: 100px;" %>
          <div class="input-append bootstrap-timepicker">
            <%= p.input_field :due_start_time, required: true, :class => "timepicker input-mini" %>
            <span class="add-on">
              <i class="icon-time"></i>
            </span>
          </div>
        </div>
      </div>

      <div class="control-group">
        <%= p.label :prep_id, 'Preps', :class => 'control-label' %>
        <div class="controls">
          <%= select_tag :prep_id, options_for_select(@invitable_preps.map{ |p| [p.title, p.id] }), required: true, prompt: "Please select..." %>
        </div>
      </div>

      <div class="control-group">
        <%= p.label :comments, 'Description', :class => 'control-label' %>
        <div class="controls">
          <%= p.text_area :comments, required: true, :style =>"width: 300px; height: 150px;" %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= p.submit "Save", :class => "btn btn-success" %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
  <% end %>
</div>